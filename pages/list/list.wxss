/* pages/list/list.wxss */
@import './loadMore.wxss';
@import './weiui-searchbar.wxss';
.list {
  display: flex;
  height: 250rpx;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
.list .left {
  width: 200rpx;
  display: flex;
}
image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  align-items: center;
}
.list .center {
  flex: 1;
  font-size: 10px;
  display: flex;
  flex-direction: column;
  color: #666;
  margin: 0 10rpx;
}
.title1{
  font-size: 12px;
  color: #000;
  font-weight: bold;
}
.list .right {
  width: 80rpx;
}
 .right text{
  padding: 5rpx 15rpx;
  height: 20rpx;
  background-color: #ee5533;
  color: #fff;
  border-radius: 30rpx;
  font-size: 12px;
}
.weui-loadmore{
  display: flex;
  justify-content: center;
}
.weui-loadmore__tips{
  font-size: 12px;
}